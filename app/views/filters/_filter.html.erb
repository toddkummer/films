<button type="button" class="bg-blue-100 hover:bg-blue-800 hover:text-white border border-gray-400 pl-2 pr-1 rounded-full inline-flex items-center">
  <%= form.hidden_field filter.field_name, value: filter.value %>
  <span class="text-sm py-1">
    <%= filter.label %>
  </span>
  <svg class="fill-current w-3 h-3 ml-1" viewBox="-2 -2 18 18" data-action="click->filter#remove">
    <path fill="none" stroke="currentColor" stroke-linecap="round" strokeWidth="2" d="M0 13.0332964L13.0332964 0M13.0332964 13.0332964L0 0"></path>
  </svg>
</button>
